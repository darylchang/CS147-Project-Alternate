<!doctype html>

<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/metro-bootstrap.css" rel="stylesheet">
	<link href="/css/introHCI.css" rel="stylesheet">

    <link rel="stylesheet" href="/css/jquery.sidr.dark.css">
    <script src="/js/jquery.min.js"></script>
    <script src="/js/jquery.sidr.min.js"></script>

    <script src="/js/bootstrap.min.js"></script>  

    <script type="text/javascript">
    function incrementLikes()
    {
        var b = document.getElementById("thumbs-up")
        b.className += " active";
        var numLikes = {{upvotes}} + 1;
        var likeCount = b.children[0];
        likeCount.textContent = " " + numLikes;
    }
    function decrementLikes()
    {
        var b = document.getElementById("thumbs-down")
        b.className += " active";
        var numLikes = {{downvotes}} + 1;
        var likeCount = b.children[0];
        likeCount.textContent = " " + numLikes;
    }
        function addFavorite()
    {
        var b = document.getElementById("favorites")
        b.className += " active";
        var numLikes = {{favorites}} + 1;
        var likeCount = b.children[0];
        likeCount.textContent = " " + numLikes;
    }

    </script>

</head>

<body class="metro">

    {{>navMenu}}       

    <div class="panel">
        <div class="panel-header  fg-white">
            <button id="back"  type="submit" onclick="window.location.href='/dining/{{dining_hall}}'"><i class="icon-arrow-left"></i></button> 
            <h2> {{name}} </h2>
        </div>

        <div class="panel-content">
              <div class="button-set rating">
                <button id="thumbs-up" class="fg-green" type="button" onclick="incrementLikes()"><i class="icon-thumbs-up"> {{upvotes}}</i></button>
                <button id="thumbs-down" class="fg-red" type="button" onclick="decrementLikes()"><i class="icon-thumbs-down"> {{downvotes}}</i></button>
                <button id="favorites" class="fg-amber" type="button" onclick="addFavorite()"><i class="icon-star-3"> {{favorites}}</i></button>
            </div>
            <img src='/images/{{name}}.jpg' width="300px"/ >   
        </div>

    </div>


    <div class="panel">
        <div class="panel-header fg-white">
          <h3> Attributes: </h3>
        </div>
        <div class="panel-content">
            <div class="button-set">
                <span>
                    {{#each tags}}
                    <button class="foodTag"> {{this}} </button>
                    {{/each}}
                </span>
            </div>
        </div>
    </div>
        	
    <div class="panel">
        <div class="panel-header  fg-white">
            <h3> Nutritional Details: </h3>
        </div>
        
        <div class="panel-content">
                <p>{{nutritional_info}}</p>
        </div>
    </div>
</body>
</html>

